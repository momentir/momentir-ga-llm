# ⚠️ SECURITY WARNING ⚠️
# This file contains sensitive information and should NEVER be committed to git.
# Create a copy of this file as .env and update the values with your actual credentials.
# The .env file is ignored by git for security reasons.

# Azure OpenAI API 설정
OPENAI_API_KEY=your-azure-openai-api-key-here
OPENAI_API_TYPE=azure
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o

# Azure 임베딩 전용 리소스 설정
AZURE_EMBEDDING_ENDPOINT=https://your-embedding-resource.cognitiveservices.azure.com/
AZURE_EMBEDDING_API_KEY=your-azure-embedding-api-key-here
AZURE_EMBEDDING_API_VERSION=2024-02-01
AZURE_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small

# 데이터베이스 설정 (PostgreSQL) - AWS RDS
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/database-name

# 개발 환경 설정
SQL_ECHO=true
AUTO_CREATE_TABLES=false

# 환경 설정
ENVIRONMENT=local

# LangSmith 설정 (LLM 호출 추적)
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=momentir-cx-llm
LANGSMITH_TRACING=true
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

AWS_REGION=ap-northeast-2
AWS_SES_ACCESS_KEY=your-aws-access-key-here
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_SES_FROM_EMAIL=your-email@domain.com
