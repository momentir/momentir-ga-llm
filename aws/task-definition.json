{
  "family": "momentir-cx-llm",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::940482450816:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::940482450816:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "momentir-cx-llm",
      "image": "940482450816.dkr.ecr.ap-northeast-2.amazonaws.com/momentir-cx-llm:bfea2cf646ba4eb2b4f0e07661b6de2fef444f75",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "OPENAI_API_TYPE",
          "value": "azure"
        },
        {
          "name": "AZURE_OPENAI_API_VERSION",
          "value": "2024-02-01"
        },
        {
          "name": "AZURE_OPENAI_CHAT_DEPLOYMENT_NAME",
          "value": "gpt-4o"
        },
        {
          "name": "AZURE_EMBEDDING_API_VERSION",
          "value": "2024-02-01"
        },
        {
          "name": "AZURE_EMBEDDING_DEPLOYMENT_NAME",
          "value": "text-embedding-3-small"
        },
        {
          "name": "SQL_ECHO",
          "value": "false"
        },
        {
          "name": "AUTO_CREATE_TABLES",
          "value": "false"
        },
        {
          "name": "LANGCHAIN_TRACING_V2",
          "value": "true"
        },
        {
          "name": "LANGCHAIN_ENDPOINT",
          "value": "https://api.smith.langchain.com"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:940482450816:secret:momentir-cx-llm/database-url-sHxzYg"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:940482450816:secret:momentir-cx-llm/openai-api-key-wGG3Oi"
        },
        {
          "name": "LANGSMITH_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:940482450816:secret:momentir-cx-llm/langsmith-api-key-INvQ0v"
        },
        {
          "name": "LANGSMITH_TRACING",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:940482450816:secret:momentir-cx-llm/langsmith-tracing-zWGI3D"
        },
        {
          "name": "ENVIRONMENT",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:940482450816:secret:momentir-cx-llm/environment-AivvOq"
        },
        {
          "name": "AZURE_OPENAI_ENDPOINT",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:940482450816:secret:momentir-cx-llm/azure-openai-endpoint-xqkTJM"
        },
        {
          "name": "AZURE_EMBEDDING_ENDPOINT",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:940482450816:secret:momentir-cx-llm/azure-embedding-endpoint-tsmpor"
        },
        {
          "name": "AZURE_EMBEDDING_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:940482450816:secret:momentir-cx-llm/azure-embedding-api-key-tzIjee"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/momentir-cx-llm",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import urllib.request; urllib.request.urlopen('http://localhost:8000/').getcode() == 200\" || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}